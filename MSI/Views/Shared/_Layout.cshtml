<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MSI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MSI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight:bold;font-size:130%;">MSI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-primary" style="white-space:nowrap;margin-left:10%" id="dvWorkInstruction" asp-area="" asp-controller="PlayVideo" asp-action="VideoPlaying">Work Instruction</a>
                        </li>
                    </ul>
                </div>

                <div style="margin-left:25%;font-size: 150%;font-weight: bold; white-space: nowrap;">
                    <span>Stage WI Mapping To System</span>
                </div>

                <div class="nav-item" style="margin-left:5%;white-space: nowrap">
                    <a class="nav-link text-primary" asp-area="" asp-controller="System" id="dvNewSystem" asp-action="Index">Add New System</a>
                </div>
                <!-- Updated Log Out Button with Confirmation -->
                <div class="nav-item" style="margin-left:1%;white-space: nowrap">
                    <a href="javascript:void(0);" onclick="confirmLogout()"><b>Log Out</b></a>

                </div>

                <div>
            
                    <img src="~/images/download.png" style="width:65%;margin-left:40%;" />
                </div>
          
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MSI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        function confirmLogout() {
            // Display a confirmation message
            const confirmation = confirm("Are you sure you want to log out?");

            // If the user confirms, redirect to the logout page
            if (confirmation) {
                window.location.href = "/Login/Login";  // Replace with your desired URL
            }
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
