@model List<DocVerified>
@{
    ViewData["Title"] = "Fileuploaddetails";
}
<head>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>
</head>
<div class="container">
    <section>
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header"> <h3>Doc Verified</h3></div>
                    <div class="card-body">
                        <div class="container mt-4">
                            <div class="table-responsive table-container border rounded shadow">
                                <table class="table table-striped table-bordered">
                                    <thead class="table-primary">
                                        <tr>
                                            <th>Doc ID</th>
                                            <th>Emp ID</th>
                                            <th>Emp Name</th>
                                            <th>Doc Name</th>
                                            <th>Doc DateTime</th>
                                            <th>Doc Type</th>
                                            <th>Doc Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if(Model != null)
                                        {
                                            @if(Model.Count > 0)
                                            {
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.docId</td>
                                                        <td>@item.empId</td>
                                                        <td>@item.empName</td>
                                                        <td>@item.docName</td>
                                                        <td>@item.docDateTime</td>
                                                        <td>@item.docType</td>
                                                        <td>@item.docStatus</td>
                                                        <td><input type="button" class="btn btn-primary" name="View" value="View" id="btnView" /></td>
                                                    </tr>
                                                }

                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="8" style="text-align:center">No Data Found</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" style="text-align:center">No Data Found</td>
                                            </tr>
                                        }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>
        </div>
            </div>
        </div>

        <div class="modal fade" id="myModalDocView" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Documnet Verified</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                       @*  <canvas id="pdfViewer"></canvas> *@
						<iframe id="pdfViewer" src="~/datahandling.pdf"></iframe>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnApprove" class="btn btn-primary">Approve</button>
                        <button type="button" id="btnReject" class="btn btn-danger">Reject</button>
                        <button type="button" id="btnClose" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
         </div>

        <div class="modal fade" id="myModalReject" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Reject Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                     <textarea style="width:100%;height:100px;"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btnSave" class="btn btn-primary">Save</button>
                        <button type="button" id-="btnClear" class="btn btn-danger">Clear</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        $('#ddlsystem').val('');
        var today = new Date();
        $('#dtVideodate').val(today);
        var day = ("0" + today.getDate()).slice(-2);
        var month = ("0" + (today.getMonth() + 1)).slice(-2); // January is 0!
        var year = today.getFullYear();

        // Format the date as YYYY-MM-DD
        var minDate = year + "-" + month + "-" + day;
        $('#dtVideoDate').attr('min', minDate);
    });
    $('#btnUpload').on('click', function (event) {

        var systemname = $('#ddlsystem').val();
        var uploadfile = $('#file').val();
        var vdate = $('#dtVideoDate').val();
        var ftime = $('#dtFromTime').val();
        var ttime = $('#dtToTime').val();
        if (systemname == "" || uploadfile == "" || vdate == "" || ftime == "00:00:00" || ttime == "00:00:00" || vdate == "0001-01-01") {
            alert("Please Give Valid Input");
            event.preventDefault();
        }
    });

    function updateValue(sysid) {
        $('#ddlsystem').val(sysid);
    }
    function deleteValue(sysid, vdate, ftime, ttime) {
        debugger;
        $.ajax({
            url: '/Master/deleteFileMapping',
            type: 'POST',
            data: { systemid: sysid, videoDate: vdate, fromtime: ftime, totime: ttime },
            catch: false,
            async: false,
            success: function (result) {
                if (result > 0) {
                    alert('Delete Successfully');
                    window.location.href = '/Master/MasterDetails';
                }
                else {
                    alert("Not Deleted");
                }
            },
            Error: function (result) {
                alert(result);
            },

        });
    }
</script>
<style>
    .btn {
        height: 2em;
        font-family: serif;
    }
</style>